<div class="container sign-up-form">
  <h2 class="login-signup-title">Please Sign Up</h2>
  <form class="signup-form">
    <div class="form-floating">
      <input
        type="email"
        class="form-control"
        id="floatingEmail"
        placeholder="Email"
      />
    </div>
    <div class="form-floating">
      <input class="form-control" id="floatingInput" placeholder="Username" />
    </div>
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        id="floatingPassword"
        placeholder="Password"
      />
    </div>
    <br />
    <button class="w-100 btn btn-lg btn-primary find login-signup-btn" type="submit">Sign Up</button>
    <a class="login-link " href="/login">Login instead</a>
  </form>

<script src="/javascript/signup.js"></script>